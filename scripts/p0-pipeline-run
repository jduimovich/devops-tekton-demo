apiVersion: tekton.dev/v1alpha1
kind: PipelineResource
metadata:
  name: GIT_SRC_RES
spec:
  type: git
  params:
    - name: url
      value: GIT_URL
    - name: revision
      value: master
---
apiVersion: tekton.dev/v1alpha1
kind: PipelineRun
metadata:
  name: PRUN_NAME
spec:
  serviceAccount: P_SA
  timeout: "1h0m0s"  
  pipelineRef:
    name: P_REF
  trigger:
    type: manual
  resources:
    - name: git-source
      resourceRef:
        name: GIT_SRC_RES
  params: 
     - name: apply-directory
       value: PIPE_DIR
     - name: target-namespace
       value: TARGET_NS 
